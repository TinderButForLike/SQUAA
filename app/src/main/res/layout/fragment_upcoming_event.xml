<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EventDetailFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize" />

    <ImageView
        android:id="@+id/ivEventPic"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,16:9"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:transitionName="eventCard"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivEventPic"
        android:layout_centerHorizontal="true"
        android:text="event name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocation"
        android:layout_centerHorizontal="true"
        android:text="description"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="italic" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivOwnerPic"
        android:layout_width="33dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_marginBottom="22dp"
        app:srcCompat="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/tvOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvDescription"
        android:layout_below="@+id/ivOwnerPic"
        android:layout_marginTop="-25dp"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/numAttending"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivOwnerPic"
        android:layout_toEndOf="@+id/tvEventName"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/attending"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivOwnerPic"
        android:layout_toEndOf="@+id/tvEventName"
        android:text="Attending"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEventName"
        android:layout_centerHorizontal="true"
        android:text="location"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_centerHorizontal="true"
        android:text="date" />

    <TextView
        android:id="@+id/owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivOwnerPic"
        android:layout_alignStart="@+id/tvDescription"
        android:text="Owner"
        android:textAlignment="viewStart" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ivEventPic"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_join_event"
        app:backgroundTint="@color/secondaryColor"
        app:rippleColor="@color/secondaryDarkColor" />

    <com.lyft.lyftbutton.LyftButton
        android:id="@+id/lyft_button"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape" />


</RelativeLayout>