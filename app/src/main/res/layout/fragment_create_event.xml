<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/white"
    tools:context=".fragments.CreateEventFragment">

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:hint="what's your event called?"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/description"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="131dp"
        android:ems="10"
        android:inputType="date"
        android:textColorHint="@android:color/white"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="241dp"
        android:ems="10"
        android:hint="tell us about your event"
        android:inputType="text|textPersonName"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="14sp" />

    <Button
        android:id="@+id/create"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/launchGalBtn"
        android:layout_marginBottom="84dp"
        android:background="@drawable/textbox"
        android:text="create event" />

    <TextView
        android:id="@+id/imagePrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="203dp"
        android:text="Add a picture to your event"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/eventPic"
        android:layout_width="121dp"
        android:layout_height="123dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="65dp"
        android:background="@drawable/ic_cam" />

    <Button
        android:id="@+id/launchGalBtn"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eventPic"
        android:layout_marginEnd="86dp"
        android:background="@drawable/textbox"
        android:text="launch gallery" />

    <Button
        android:id="@+id/mapLaunch"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/location"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:background="@drawable/textbox"
        android:text="launch map " />

    <CheckBox
        android:id="@+id/privateCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="182dp"
        android:text="private" />

    <CheckBox
        android:id="@+id/publicCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/privateCheck"
        android:layout_toEndOf="@+id/eventPic"
        android:text="public" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date"
        android:layout_toEndOf="@+id/name"
        android:text='enter in format "mm/dd/yyyy"'
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="35dp"
        android:text="Title?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/date"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="-131dp"
        android:text="When?" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/location"
        android:layout_alignStart="@+id/name"
        android:layout_marginBottom="-272dp"
        android:text="Where?" />

</RelativeLayout>